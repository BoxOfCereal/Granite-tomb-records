<!-- Navigation -->
<nav class="pt-6">
  <div class="container mx-auto px-4">
    <!-- Mobile Accordion -->
    <div class="flex flex-col items-center md:hidden">
      <button id="nav-toggle" class="text-white uppercase text-sm tracking-widest px-4 py-2 border border-white rounded focus:outline-none">
        Menu
      </button>
      <div id="nav-menu" class="flex flex-col items-center space-y-4 mt-4 hidden">
        {% for item in navigation %}
          <a href="{{ item.url }}" class="text-white hover:text-muted uppercase text-sm tracking-widest transition text-center">{{ item.title }}</a>
        {% endfor %}
      </div>
    </div>
    <!-- Desktop Nav -->
    <div class="hidden md:flex justify-center space-x-12">
      {% for item in navigation %}
        <a href="{{ item.url }}" class="text-white hover:text-muted uppercase text-sm tracking-widest transition">{{ item.title }}</a>
      {% endfor %}
    </div>
  </div>
  <hr class="border-white mt-4 w-96 mx-auto">
</nav>
<script>
  // Accordion toggle for mobile nav
  document.addEventListener('DOMContentLoaded', function () {
    var navToggle = document.getElementById('nav-toggle');
    var navMenu = document.getElementById('nav-menu');
    if(navToggle && navMenu) {
      navToggle.addEventListener('click', function () {
        navMenu.classList.toggle('hidden');
      });
    }
  });
</script>