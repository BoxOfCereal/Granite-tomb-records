---
layout: "layouts/base.njk"
---

<section class="py-12 bg-black min-h-screen">
  <div class="container mx-auto px-4 max-w-2xl">
    <div class="bg-dark p-8 border border-light rounded-sm shadow-lg text-center">
      {% if poster %}
        <img src="{{ poster }}" alt="Poster for {{ title }}" class="w-full h-64 object-cover rounded-sm border-4 border-light" />
      {% endif %}
      <h1 class="text-3xl uppercase mb-2 text-light">{{ title }}</h1>
      <p class="text-muted mb-4">{{ date }}</p>
      {% if description %}
        <p class="mb-6 text-base text-light">{{ description }}</p>
      {% endif %}
      {% if venue %}
        <p class="mb-6 text-base text-light">Venue: {{ venue }}</p>
      {% endif %}
      {% if address %}
        <p class="mb-6 text-base text-light">Address: {{ address }}</p>
      {% endif %}
    </div>
    <div class="mt-8 text-center">
      <a href="/shows/" class="text-light hover:underline">&larr; Back to Shows</a>
    </div>
  </div>
</section>