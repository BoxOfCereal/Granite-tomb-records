---
layout: "layouts/base.njk"
---

<section class="py-8 bg-black min-h-screen">
  <div class="container mx-auto px-4 max-w-4xl">
    <div class="bg-black p-8  shadow-lg">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Poster Column -->
        <div>
          {% if poster %}
            <img src="{{ poster }}" 
                 alt="Poster for {{ title }}" 
                 class="w-full h-auto object-cover rounded-sm border-4 border-light" />
          {% endif %}
        </div>
        
        <!-- Details Column -->
        <div class="space-y-6">
          <h1 class="text-3xl uppercase text-light">{{ title }}</h1>
          <p class="text-muted">{{ show.date  }}</p>
          
          {% if description %}
            <p class="text-base text-light">{{ description }}</p>
          {% endif %}
          
          {% if venue %}
            <div class="flex items-center space-x-4">
              <span class="text-light">Venue:</span>
              <p class="text-base text-light">{{ venue }}</p>
            </div>
          {% endif %}
          
          {% if address %}
            <div class="flex items-center space-x-4">
              <span class="text-light">Address:</span>
              <p class="text-base text-light">{{ address }}</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="mt-8 text-center">
      <a href="/shows/" class="text-light hover:underline">&larr; Back to Shows</a>
    </div>
  </div>
</section>