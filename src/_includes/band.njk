---
layout: "layouts/base.njk"
---

<section class="py-20 bg-black min-h-screen">
  <div class="container mx-auto px-4 max-w-2xl">
    <div class="bg-dark p-8 border border-light rounded-lg shadow-lg text-center">
      {% if image %}
        <img src="{{ image }}" alt="Photo of {{ name }}" class="w-48 h-48 mx-auto mb-6 object-cover rounded-full border-4 border-light" />
      {% endif %}
      <h1 class="text-3xl uppercase mb-2 text-light">{{ name }}</h1>
      <p class="text-muted mb-4">{{ genre }}{% if country %} / {{ country }}{% endif %}</p>
      {% if description %}
        <p class="mb-6 text-base text-light">{{ description }}</p>
      {% endif %}

      {% if social %}
        <div class="flex flex-wrap justify-center gap-4 mt-6">
          {% if social.website %}
            <a href="{{ social.website }}" class="text-light hover:underline" target="_blank" rel="noopener">Website</a>
          {% endif %}
          {% if social.instagram %}
            <a href="{{ social.instagram }}" class="text-light hover:underline" target="_blank" rel="noopener">Instagram</a>
          {% endif %}
          {% if social.facebook %}
            <a href="{{ social.facebook }}" class="text-light hover:underline" target="_blank" rel="noopener">Facebook</a>
          {% endif %}
          {% if social.twitter %}
            <a href="{{ social.twitter }}" class="text-light hover:underline" target="_blank" rel="noopener">Twitter</a>
          {% endif %}
        </div>
      {% endif %}
    </div>
    <div class="mt-8 text-center">
      <a href="/bands/" class="text-light hover:underline">&larr; Back to All Bands</a>
    </div>
  </div>
</section>