---
layout: "layouts/base.njk"
---

<section class="py-12 bg-black min-h-screen">
  <div class="container mx-auto px-4 max-w-2xl">
    <div class="bg-dark p-8 border border-light rounded-sm shadow-lg text-center">
      {% if profileImage %}
        <img src="{{ profileImage }}" alt="Photo of {{ name }}" class="w-48 h-48 mx-auto mb-6 object-cover rounded-full border-4 border-light" />
      {% endif %}
      <h1 class="text-3xl uppercase mb-2 text-light">{{ name }}</h1>
      <p class="text-muted mb-4">{{ genre }}{% if country %} / {{ country }}{% endif %}</p>
      {% if description %}
        <p class="mb-6 text-base text-light">{{ description }}</p>
      {% endif %}

      {% if social %}
        <div class="flex flex-wrap justify-center gap-4 mt-6">
          {% if social.website %}
            <a href="{{ social.website }}" class="text-light hover:underline" target="_blank" rel="noopener" aria-label="Website"><i class="fas fa-globe"></i></a>
          {% endif %}
          {% if social.instagram %}
            <a href="{{ social.instagram }}" class="text-light hover:underline" target="_blank" rel="noopener" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
          {% endif %}
          {% if social.facebook %}
            <a href="{{ social.facebook }}" class="text-light hover:underline" target="_blank" rel="noopener" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
          {% endif %}
          {% if social.twitter %}
            <a href="{{ social.twitter }}" class="text-light hover:underline" target="_blank" rel="noopener" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
          {% endif %}
          {% if social.youtube %}
            <a href="{{ social.youtube }}" class="text-light hover:underline" target="_blank" rel="noopener" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
          {% endif %}
          {% if social.tiktok %}
            <a href="{{ social.tiktok }}" class="text-light hover:underline" target="_blank" rel="noopener" aria-label="Tiktok"><i class="fab fa-tiktok"></i></a>
          {% endif %}
          {% if social.bandcamp %}
            <a href="{{ social.bandcamp }}" class="text-light hover:underline" target="_blank" rel="noopener" aria-label="Bandcamp"><i class="fab fa-bandcamp"></i></a>
          {% endif %}

        </div>
      {% endif %}
      
    </div>
    <div class="mt-8 text-center">
      <a href="/bands/" class="text-light hover:underline">&larr; Back to All Bands</a>
    </div>
  </div>
</section>