<section class="py-8 bg-black">
  <div class="container mx-auto px-4">
    {# <h2 class="text-3xl uppercase mb-12 text-center text-white">Video Player</h2> #}
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8 mx-auto md:px-20">
      
      <!-- Video Player: always first -->
      <div class="order-1 md:order-1 md:col-span-4 flex flex-col justify-center">
        <div class="w-full md:w-11/12 mx-auto">
          <div class="aspect-video bg-black border border-light flex items-center justify-center relative">
            <iframe
              id="main-video"
              width="100%"
              height="100%"
              src="https://www.youtube.com/embed/{{ collections.videos[0].id }}"
              title="{{ collections.videos[0].title }}"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="rounded w-full h-56 md:h-full"
            ></iframe>
          </div>
          <p class="mt-2 text-white text-lg ">{{ videos[0].caption }}</p>
        </div>
      </div>

      <!-- Playlist: below video on mobile, right on desktop -->
      <div class="order-2 md:order-2 md:col-span-1 space-y-4 mt-6 md:mt-0 md:max-h-[32rem] md:overflow-y-auto">
        {% for video in videos %}
        <button
          class="flex w-full items-center gap-3 text-left bg-gray-900 hover:bg-gray-800 p-2 rounded-lg shadow transition group"
          style="min-height: 4.5rem;"
          onclick="changeVideo('{{ video.id }}', '{{ video.caption | escape }}')"
        >
          <img src="https://img.youtube.com/vi/{{ video.id }}/hqdefault.jpg" alt="{{ video.title }} thumbnail" class="w-20 h-12 object-cover rounded-md border border-gray-700 group-hover:border-white transition" loading="lazy">
          <div class="flex flex-col flex-1 min-w-0">
            <span class="text-white font-semibold text-sm truncate">{{ video.title }}</span>
            {% if video.date %}
              <span class="text-gray-400 text-xs mt-1">{{ video.date }}</span>
            {% endif %}
          </div>
        </button>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  function changeVideo(videoId, caption) {
    const iframe = document.getElementById('main-video');
    iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
  }
</script>
