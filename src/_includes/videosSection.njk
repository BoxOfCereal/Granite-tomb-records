<section class="py-20 bg-dark">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl uppercase mb-12 text-center">Live Destruction</h2>
    <div class="grid md:grid-cols-2 gap-8">
      {% for video in videos %}
      <div class="video-thumbnail bg-black border border-light aspect-video flex items-center justify-center relative">
        <iframe
          width="100%"
          height="100%"
          src="https://www.youtube.com/embed/{{ video.id }}"
          title="{{ video.title }}"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
        {% if video.caption %}
        <span class="text-white absolute bottom-2 left-2 bg-black bg-opacity-70 px-2 py-1 rounded">{{ video.caption }}</span>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>