<section class="py-20 bg-black">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl uppercase mb-12 text-center">Bands We Work With</h2>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {% for band in collections.bands %}
      <div class="band-card bg-dark p-6 border border-light text-center">
        <div class="w-32 h-32 mx-auto mb-4 bg-black"></div>
        <h3 class="text-lg uppercase mb-2">{{ band.name }}</h3>
        <p class="text-muted text-sm">{{ band.genre }} / {{ band.country }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>